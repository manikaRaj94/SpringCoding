<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">



   <bean id="emp1" class="com.spring.practice.dependecyInjection.constuctorsetter.Employee">
       <constructor-arg index="0" value="1001"/>
       <constructor-arg index="1" ref="department1"/>
       <property name="empName" value="Manika Raj"/>
       <property name="city" value="Bangalore"/>
   </bean>

    <bean id="department1" class="com.spring.practice.dependecyInjection.constuctorsetter.Department">
        <property name="deptID" value="D001"/>
        <constructor-arg index="0" value="Department001"/>
    </bean>


</beans>